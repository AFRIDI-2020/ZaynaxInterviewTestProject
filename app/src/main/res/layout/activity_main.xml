<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:weightSum="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/white_green">

            <ImageView
                android:id="@+id/cart_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/cart_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <RelativeLayout
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/card_notification_count_layout_bg"
                app:layout_constraintEnd_toEndOf="@id/cart_icon"
                app:layout_constraintTop_toTopOf="@id/cart_icon">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/segeo_ui_bold"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </RelativeLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/dark_green">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/segio_ui_semibold"
                android:lineSpacingExtra="0dp"
                android:text="@string/add_to_cart"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/light_green">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/segio_ui_semibold"
                android:lineSpacingExtra="0dp"
                android:text="@string/buy_now"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </RelativeLayout>


    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_layout"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/cover_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/cover_image"
                app:layout_constraintTop_toTopOf="parent" />


            <RelativeLayout
                android:id="@+id/chevron_layout"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_layout_transparent_black1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_chevron_left" />

            </RelativeLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/search_menu_on_cover_pic_layout"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@id/chevron_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/chevron_layout">

                <ImageView
                    android:id="@+id/search_line_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/search_line"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <View
                    android:id="@+id/view1"
                    android:layout_width="2dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/white"
                    app:layout_constraintBottom_toBottomOf="@id/search_line_icon"
                    app:layout_constraintStart_toEndOf="@id/search_line_icon"
                    app:layout_constraintTop_toTopOf="@id/search_line_icon" />


                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_more_vert"
                    app:layout_constraintStart_toEndOf="@id/view1"
                    app:layout_constraintTop_toTopOf="@id/view1" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/bdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/segeo_ui_bold"
                android:text="@string/bdt"
                android:textColor="@color/black2"
                android:textSize="26sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cover_image" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/segeo_ui_bold"
                android:text="2,850"
                android:textColor="@color/black2"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/bdt"
                app:layout_constraintTop_toTopOf="@+id/bdt" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/previout_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/segeo_ui_bold"
                android:text="BDT. 3050"
                android:textColor="@color/ash"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/amount"
                app:layout_constraintStart_toEndOf="@id/amount"
                app:layout_constraintTop_toTopOf="@+id/amount" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/offer_layout_bg"
                android:paddingStart="8dp"
                android:paddingTop="2dp"
                android:paddingEnd="8dp"
                android:paddingBottom="2dp"
                app:layout_constraintBottom_toBottomOf="@id/previout_amount"
                app:layout_constraintStart_toEndOf="@id/previout_amount"
                app:layout_constraintTop_toTopOf="@id/previout_amount">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segeo_ui_bold"
                    android:text="25%"
                    android:textColor="@color/light_green" />

            </RelativeLayout>


            <ImageView
                android:id="@+id/share"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/share_icon"
                app:layout_constraintBottom_toBottomOf="@+id/previout_amount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/previout_amount" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/like_icon"
                app:layout_constraintEnd_toStartOf="@id/share"
                app:layout_constraintTop_toTopOf="@id/share" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tuinanle_sandal_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoeui"
                android:text="@string/tunanle_sandals_description"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="@id/share"
                app:layout_constraintStart_toStartOf="@id/bdt"
                app:layout_constraintTop_toBottomOf="@id/bdt" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segio_ui_semibold"
                android:text="4.8"
                android:textColor="@color/light_green"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@id/tuinanle_sandal_description"
                app:layout_constraintTop_toBottomOf="@id/tuinanle_sandal_description" />

            <ImageView
                android:id="@+id/star"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_star"
                app:layout_constraintBottom_toBottomOf="@id/rating"
                app:layout_constraintStart_toEndOf="@id/rating"
                app:layout_constraintTop_toTopOf="@id/rating" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rating_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/segoeui"
                android:text="85"
                android:textColor="@color/dark_ash"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/star"
                app:layout_constraintTop_toTopOf="@id/rating" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ratings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/segoeui"
                android:text="@string/ratings"
                android:textColor="@color/dark_ash"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/rating_count"
                app:layout_constraintTop_toTopOf="@id/rating_count" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/review_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/segoeui"
                android:text="98"
                android:textColor="@color/dark_ash"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/ratings"
                app:layout_constraintTop_toTopOf="@id/ratings" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/segoeui"
                android:text="@string/reviews"
                android:textColor="@color/dark_ash"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/review_count"
                app:layout_constraintTop_toTopOf="@id/review_count" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/order_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/segoeui"
                android:text="80"
                android:textColor="@color/dark_ash"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/reviews"
                app:layout_constraintTop_toTopOf="@id/reviews" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/segoeui"
                android:text="@string/orders"
                android:textColor="@color/dark_ash"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/order_count"
                app:layout_constraintTop_toTopOf="@id/order_count" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/color_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/segoeui"
                android:text="2"
                android:textColor="@color/black2"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/rating"
                app:layout_constraintTop_toBottomOf="@id/rating" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/colors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/segoeui"
                android:text="@string/colors"
                android:textColor="@color/black2"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/color_count"
                app:layout_constraintTop_toTopOf="@id/color_count" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/comma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:text=","
                android:textColor="@color/black2"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/colors"
                app:layout_constraintTop_toTopOf="@id/colors" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/size_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/segoeui"
                android:text="4"
                android:textColor="@color/black2"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/comma"
                app:layout_constraintTop_toTopOf="@id/comma" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sizes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/segoeui"
                android:text="@string/sizes"
                android:textColor="@color/black2"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/size_count"
                app:layout_constraintTop_toTopOf="@id/size_count" />


            <LinearLayout
                android:id="@+id/shoeLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="5"
                app:layout_constraintEnd_toEndOf="@id/share"
                app:layout_constraintStart_toStartOf="@id/color_count"
                app:layout_constraintTop_toBottomOf="@id/color_count">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="2dp">

                    <RelativeLayout
                        android:id="@+id/shoe1Layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/cardview_layout_shoe"
                        android:elevation="2dp">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="65dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/shoe1" />


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/cardview_layout_shoe"
                        android:elevation="2dp">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="65dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/shoe1" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/cardview_layout_shoe"
                        android:elevation="2dp">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="65dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/shoe1" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/cardview_layout_shoe"
                        android:elevation="2dp">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="65dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/shoe1" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/cardview_layout_shoe"
                        android:elevation="2dp">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="65dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/shoe1" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:background="@color/ash3"
                app:layout_constraintTop_toBottomOf="@+id/shoeLayout" />

            <ImageView
                android:id="@+id/shipping_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/fast_delivery_icon"
                app:layout_constraintStart_toStartOf="@id/shoeLayout"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/shipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/segoeui"
                android:text="@string/shipping"
                android:textColor="@color/transparent_black1"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/shipping_icon"
                app:layout_constraintStart_toEndOf="@id/shipping_icon"
                app:layout_constraintTop_toTopOf="@id/shipping_icon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/estimated_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimated Delivery: 7-15 days"
                android:textColor="@color/ash4"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@id/share"
                app:layout_constraintTop_toTopOf="@+id/shipping" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/spinner_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/spinner_border"
                android:padding="12dp"
                app:layout_constraintEnd_toEndOf="@+id/estimated_delivery"
                app:layout_constraintStart_toStartOf="@id/shipping_icon"
                app:layout_constraintTop_toBottomOf="@id/shipping_icon">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:text="@string/zDrop_premium_shipping"
                    android:textColor="@color/transparent_black_2"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/drop_down_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/cost_bdt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:text="@string/Cost_bdt"
                    android:textColor="@color/transparent_black_2"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@id/drop_down_icon"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/ash3"
                app:layout_constraintTop_toBottomOf="@+id/spinner_layout" />

            <ImageView
                android:id="@+id/specification_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_specification_icon"
                app:layout_constraintStart_toStartOf="@id/spinner_layout"
                app:layout_constraintTop_toBottomOf="@id/view3" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/specification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/segoeui"
                android:text="@string/specification"
                android:textColor="@color/transparent_black_2"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/specification_icon"
                app:layout_constraintStart_toEndOf="@id/specification_icon"
                app:layout_constraintTop_toTopOf="@id/specification_icon" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                app:layout_constraintBottom_toBottomOf="@id/specification"
                app:layout_constraintEnd_toEndOf="@id/spinner_layout"
                app:layout_constraintTop_toTopOf="@id/specification" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="12dp"
                android:background="@color/ash3"
                app:layout_constraintTop_toBottomOf="@+id/specification_icon" />

            <ImageView
                android:id="@+id/review_badge_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="12dp"
