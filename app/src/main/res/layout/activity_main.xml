<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:weightSum="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/white_green">

            <ImageView
                android:id="@+id/cart_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/cart_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:cardBackgroundColor="@color/dark_green"
                app:cardCornerRadius="50dp"
                app:layout_constraintEnd_toEndOf="@id/cart_icon"
                app:layout_constraintTop_toTopOf="@id/cart_icon">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/segeo_ui_bold"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/dark_green">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/segio_ui_semibold"
                android:lineSpacingExtra="0dp"
                android:text="@string/add_to_cart"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/light_green">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/segio_ui_semibold"
                android:lineSpacingExtra="0dp"
                android:text="@string/buy_now"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </RelativeLayout>


    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_layout"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/cover_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/cover_image"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/chevron_card_view"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/transparent_black1"
                app:cardCornerRadius="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_chevron_left" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/search_menu_on_cover_pic_layout"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@id/chevron_card_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/chevron_card_view">

                <ImageView
                    android:id="@+id/search_line_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/search_line"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <View
                    android:id="@+id/view1"
                    android:layout_width="2dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/white"
                    app:layout_constraintBottom_toBottomOf="@id/search_line_icon"
                    app:layout_constraintStart_toEndOf="@id/search_line_icon"
                    app:layout_constraintTop_toTopOf="@id/search_line_icon" />


                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_more_vert"
                    app:layout_constraintStart_toEndOf="@id/view1"
                    app:layout_constraintTop_toTopOf="@id/view1" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/bdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/segeo_ui_bold"
                android:text="@string/bdt"
                android:textColor="@color/black2"
                android:textSize="26sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cover_image" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/segeo_ui_bold"
                android:text="2,850"
                android:textColor="@color/black2"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/bdt"
                app:layout_constraintTop_toTopOf="@+id/bdt" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/previout_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/segeo_ui_bold"
                android:text="BDT. 3000"
                android:textColor="@color/ash"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/amount"
                app:layout_constraintStart_toEndOf="@id/amount"
                app:layout_constraintTop_toTopOf="@+id/amount" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/offer_layout_bg"
                android:paddingStart="8dp"
                android:paddingTop="2dp"
                android:paddingEnd="8dp"
                android:paddingBottom="2dp"
                app:layout_constraintBottom_toBottomOf="@id/previout_amount"
                app:layout_constraintStart_toEndOf="@id/previout_amount"
                app:layout_constraintTop_toTopOf="@id/previout_amount">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segeo_ui_bold"
                    android:text="25%"
                    android:textColor="@color/light_green" />

            </RelativeLayout>


            <ImageView
                android:id="@+id/share"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/share_icon"
                app:layout_constraintBottom_toBottomOf="@+id/previout_amount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/previout_amount" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/like_icon"
                app:layout_constraintEnd_toStartOf="@id/share"
                app:layout_constraintTop_toTopOf="@id/share" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tuinanle_sandal_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoeui"
                android:text="@string/tunanle_sandals_description"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="@id/share"
                app:layout_constraintStart_toStartOf="@id/bdt"
                app:layout_constraintTop_toBottomOf="@id/bdt" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segio_ui_semibold"
                android:text="4.8"
                android:textColor="@color/light_green"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@id/tuinanle_sandal_description"
                app:layout_constraintTop_toBottomOf="@id/tuinanle_sandal_description" />

            <ImageView
                android:id="@+id/star"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_star"
                app:layout_constraintBottom_toBottomOf="@id/rating"
                app:layout_constraintStart_toEndOf="@id/rating"
                app:layout_constraintTop_toTopOf="@id/rating" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rating_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/segoeui"
                android:text="85"
                android:textColor="@color/dark_ash"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/star"
                app:layout_constraintTop_toTopOf="@id/rating" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ratings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/segoeui"
                android:text="@string/ratings"
                android:textColor="@color/dark_ash"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/rating_count"
                app:layout_constraintTop_toTopOf="@id/rating_count" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/review_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/segoeui"
                android:text="98"
                android:textColor="@color/dark_ash"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/ratings"
                app:layout_constraintTop_toTopOf="@id/ratings" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/segoeui"
                android:text="@string/reviews"
                android:textColor="@color/dark_ash"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/review_count"
                app:layout_constraintTop_toTopOf="@id/review_count" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/order_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/segoeui"
                android:text="80"
                android:textColor="@color/dark_ash"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/reviews"
                app:layout_constraintTop_toTopOf="@id/reviews" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/segoeui"
                android:text="@string/orders"
                android:textColor="@color/dark_ash"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/order_count"
                app:layout_constraintTop_toTopOf="@id/order_count" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/color_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/segoeui"
                android:text="2"
                android:textColor="@color/black2"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/rating"
                app:layout_constraintTop_toBottomOf="@id/rating" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/colors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:text="@string/colors"
                android:textColor="@color/black2"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@id/color_count"
                app:layout_constraintStart_toEndOf="@id/color_count"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/comma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:text=","
                android:textColor="@color/black2"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/colors"
                app:layout_constraintStart_toEndOf="@id/colors"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/size_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:text="4"
                android:textColor="@color/black2"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/comma"
                app:layout_constraintStart_toEndOf="@id/comma"
                android:layout_marginStart="5dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sizes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:text="@string/sizes"
                android:textColor="@color/black2"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@id/size_count"
                app:layout_constraintStart_toEndOf="@id/size_count"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5"
                app:layout_constraintTop_toBottomOf="@id/color_count"
                app:layout_constraintStart_toStartOf="@id/color_count"
                app:layout_constraintEnd_toEndOf="@id/share"
                android:layout_marginTop="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    app:cardCornerRadius="2dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:elevation="2dp"
                        android:background="@drawable/cardview_layout_shoe">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="65dp"
                            android:src="@drawable/shoe1"
                            android:layout_centerInParent="true"/>


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:elevation="2dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/cardview_layout_shoe">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="65dp"
                            android:src="@drawable/shoe1"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:elevation="2dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/cardview_layout_shoe">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="65dp"
                            android:src="@drawable/shoe1"
                            android:layout_centerInParent="true"/>


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:elevation="2dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/cardview_layout_shoe">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="65dp"
                            android:src="@drawable/shoe1"
                            android:layout_centerInParent="true"/>


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:elevation="2dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/cardview_layout_shoe">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="65dp"
                            android:src="@drawable/shoe1"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>